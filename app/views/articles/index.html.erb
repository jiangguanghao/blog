<%= link_to("new", new_article_path, class:"btn btn-default pull-right") %>
<table class="table">
  <tr>
    <th>标题</th>
    <th>简介</th>
    <th>操作</th>
  </tr>

<% @articles.each do |f| %>
<tr>
  <td><%= link_to(f.title, article_path(f))%></td>
  <td><%= f.content %></td>
  <td>
    <%= link_to("edit", edit_article_path(f)) %>  |
    <%= link_to("delete", article_path(f), method: :delete, data: {confirm: "Are you sure?"}) %>
  </td>
</tr>
<% end %>

</table>
